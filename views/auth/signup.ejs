  <script>
    
    async function displayResend() {
      const resendLink = document.getElementById('resendlink')
    const countDown = document.getElementById('countdown')
      console.log('this is display resend fucntion')
      resendLink.style.display = 'none'
      let num = 30
      countDown.innerText = num
      const interval = setInterval(() => {
        countDown.innerText = 'Resend OTP in ' + num + ' seconds'
        num--;
        if (num == 0) {
          clearInterval(interval)
          resendLink.style.display = 'inline'
          countDown.innerText = ''
        }

      }, 1000);
    }
    async function resendOtp() {
      console.log('this is resedn otp function')
    //  await displayResend()

      const response = await fetch('/user/resendotp', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
      if (response.ok) {
        const result = await response.json()
        Swal.fire({
          title: 'success',
          text: result.message,
          icon: 'success',
          confirmButtonText: 'OK'
        }).then(() => {
          $('#otpModal').modal('show');
          displayResend()

        })
      } else {
        //something
        Swal.fire({
          title: 'failed',
          text: 'something went wrong'
        })
      }

    }
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('registerform')
      
      // const resendlink=document.getElementById('resendlink')
      form.addEventListener('submit', async (event) => {
        event.preventDefault()

        const name = document.getElementById('name').value.trim()
        const email = document.getElementById('email').value.trim()
        const phonenumber = document.getElementById('phonenumber').value.trim()
        const password = document.getElementById('password').value.trim()
        const confirmpassword = document.getElementById('confirmpassword').value.trim()
        const errorpassword = document.getElementById('errorpassword')
        console.log(name)
        try {

          const validName = /^(?=.*\S)(?=\D*$).*$/.test(name)
          const validEmail = /^[^\s@]+@gmail\.com$/.test(email)
          const validPhone = /^[1-9]\d{9}$/.test(phonenumber)
          const validPassword = /^.{6,}$/.test(password)
          if (!validName) {
            document.getElementById('validateName').style.display = 'inline'
            return
          } else {
            document.getElementById('validateName').style.display = 'none'

          } if (!validEmail) {
            document.getElementById('validateEmail').style.display = 'inline'
            return
          } else {
            document.getElementById('validateName').style.display = 'none'

          } if (!validPhone) {
            console.log('button has clicked')
            document.getElementById('validatePhone').style.display = 'inline'
            return
          } else {
            document.getElementById('validatePhone').style.display = 'none'

          } if (!validPassword) {
            document.getElementById('validatePassword').style.display = 'inline'
            return
          } else {
            document.getElementById('validatePassword').style.display = 'none'

          }
          if (password !== confirmpassword) {
            errorpassword.style.display = 'inline'
            return
          }
          console.log(name, email, phonenumber, password);
          const response = await fetch('/user/signup', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name, email, phonenumber, password })
          })
          if (response.ok && response.status == 200) {
            Swal.fire({
              title: 'OTP send to email',
              text: 'check your gmail',
              icon: 'success',
              confirmButtonText: 'OK'
            }).then(() => {
              $('#otpModal').modal('show');
              displayResend()
            })

          } else if (response.status == 500) {
            Swal.fire({
              title: 'Failed',
              text: 'Error occured in OTP creation',
              icon: 'error',
              confirmButtonText: 'OK'
            })
          } else if (response.status === 400) {
            Swal.fire({
              title: 'Failed',
              text: 'Email already exists',
              icon: 'failed',
              confirmButtonText: 'OK'
            })
          }

        } catch (err) {
          console.log(err.message)
        }
      })
      document.getElementById('resendlink').addEventListener('click', async (event) => {
        event.preventDefault()
        resendOtp()
      })
      document.querySelectorAll('.otp-input').forEach((input, index, inputs) => {
        input.addEventListener('keyup', (e) => {
          console.log('one added')
          if (e.target.value.length === 1 && index < inputs.length - 1) {
            inputs[index + 1].focus();
          }
        });
      });
      document.getElementById('verifyOtpButton').addEventListener('click', async (event) => {
        event.preventDefault()
        console.log('button clicked')
        const otp1 = document.getElementById('otp1').value
        const otp2 = document.getElementById('otp2').value
        const otp3 = document.getElementById('otp3').value
        const otp4 = document.getElementById('otp4').value
        const otp5 = document.getElementById('otp5').value
        const otp6 = document.getElementById('otp6').value
        const email = document.getElementById('email').value.trim()
        const otp = otp1 + otp2 + otp3 + otp4 + otp5 + otp6
        try {
          console.log(email)
          console.log(otp)
          const response = await fetch('/user/verify-otp', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              email: email,
              otp: otp
            })
          })
          if (response.ok) {
            const data = await response.json()
            $('#otpModal').modal('hide');
            Swal.fire({
              title: 'success',
              text: data.message,
              icon: 'success',
              confirmButtonText: 'OK'
            }).then(() => {

              window.location.href = '/user/login'
            })
          } else if (!response.ok) {
            const result = await response.json()
            $('#otpModal').modal('hide');
            Swal.fire({
              title: 'Error',
              text: result.message,
              icon: 'error',
              confirmButtonText: 'OK'
            })
          } else {
            throw new Error('An error occured in otp part')
          }
        } catch (err) {
          $('#otpModal').modal('hide');
          Swal.fire({
            title: 'Error',
            text: err.message,
            icon: 'error',
            confirmButtonText: 'OK'
          })
        }
      })


    })
  </script>
 


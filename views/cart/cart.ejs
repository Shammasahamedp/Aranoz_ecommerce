  <script>
    $(document).ready(function() {
      function updateCart(productId, newQuantity) {
        console.log('button clicked')
        $.ajax({
          url: '/user/cart/updatecart',
          method: 'POST',
          data: {
            productId: productId,
            newQuantity: newQuantity
          },
          success: function(response) {
            // Update the DOM with the new quantities and prices
            $('tr[data-product-id="' + productId + '"] .input-number').val(newQuantity);
            $('tr[data-product-id="' + productId + '"] .item-total-price').text(newQuantity * $('tr[data-product-id="' + productId + '"] .item-price').data('price'));
            $('#cart-subtotal').text(response.totalPrice);
          },
          error: function(error) {
            console.error('Error updating cart:', error);
          }
        });
      }
    
      $('.input-number-increment').on('click', function() {
        var input = $(this).prev('.input-number');
        var value = parseInt(input.val(), 10);
        var max = parseInt(input.attr('max'));
        var productId = $(this).closest('tr').data('product-id');
        console.log(productId)
        if (!isNaN(value) && (isNaN(max) || value < max)) {
          console.log('hello')
          var newQuantity = value + 1;
          input.val(newQuantity);
          console.log(newQuantity)
          updateCart(productId, newQuantity);
        }
      });
    
      $('.input-number-decrement').on('click', function() {
        var input = $(this).next('.input-number');
        var value = parseInt(input.val(), 10);
        var min = parseInt(input.attr('min'));
        var productId = $(this).closest('tr').data('product-id');
    
        if (!isNaN(value) && (isNaN(min) || value > min)) {
          var newQuantity = value - 1;
          input.val(newQuantity);
          updateCart(productId, newQuantity);
        }
      });
    });
    </script>
    <script>
      document.addEventListener('DOMContentLoaded',async()=>{
        document.querySelectorAll('.delete-cart-btn').forEach(button=>{
          button.addEventListener('click',async(event)=>{
            console.log('button has clicked')
            event.preventDefault()
            const productId=event.target.dataset.productId;
            console.log(productId)
            deleteCartItem(productId)
          })
        })
       async function deleteCartItem(productId){
          const response=await fetch(`/user/cart/deletecart/${productId}`,{
            method:'DELETE',
            headers:{
              'Content-Type':'application/json'
            }
          })
          try{
            if(response.ok){
              console.log('return with positive response')
            const itemRow=document.querySelector(`tr[data-product-id='${productId}']`)
            console.log('after')
            if(itemRow){
              const result=await response.json()
              itemRow.remove()
              Swal.fire({
                title:'success',
                text:result.message,
                icon:'success',
                confirmButtonText:'OK'
              })
              document.getElementById('cart-subtotal').textContent = result.newSubTotal
            }else{
              alert('Failed to delete item from the cart')
            }
          }else{
            throw new Error('failed to delete the data')
          }
          }catch(err){
            const result=await response.json()
            console.error(err)
            Swal.fire({
              title:'failed',
              text:result.message,
              icon:'error',
              confirmButtonText:'OK'
            })
          }
        }
      })
    </script>

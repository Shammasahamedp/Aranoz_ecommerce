            console.log(dateDivision)
            window.location.href = `/admin/salesreport/get/${dateDivision}`

          } catch (err) {
            console.error(err)
          }
        })
        const startDate = document.getElementById('fromDate')
        const endDate = document.getElementById('toDate')

        document.getElementById('applyFilters').addEventListener('click', async (event) => {
          const fromDate = startDate.value
          const toDate = endDate.value
          console.log('this is fromdate', fromDate, 'and this is todate:', toDate)
          window.location.href = `/admin/salesreport/getCustomdate?fromDate=${fromDate}&toDate=${toDate}`
        })
      })
    </script>
   



<%- include('../partials/header.ejs')%>
<link rel="stylesheet" href="/public/css/common.css">
<link rel="stylesheet" href="/public/css/adminLogin.css">
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="card p-4 shadow-sm">
            <h3 class="text-center">Admin Login</h3>
            <form action="/admin/login" method="post" class="mt-3" id="adminLoginForm">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="container-login100-form-btn text-center py-4">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>
                
            </form>
            <div id="loginMessage" class="text-center"></div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="../../public/js/adminLogin.js">
      
    </script>
    <%- include('../partials/footer.ejs')%>
                  <div id="validateName" class="text-danger"></div>
                </div>
                <div class="form-group">
                  <label for="productName">Image</label>
                  <input type="file" id="productImage" name="image" class="form-control"
                    placeholder="Upload the image" required>
                  <div id="image" class="text-danger"></div>
                </div>
                <!-- Category Field -->

                  <label for="productQuantity">Quantity</label>
                  <input type="number" id="productQuantity" name="quantity" class="form-control"
                    placeholder="Enter product quantity" required>
                  <div id="validateQuantity" class="text-danger"></div>
                </div>
                <!-- Save Button -->
                <button type="submit" class="btn btn-primary" id="formbutton">Add Product</button>
                <button class="btn btn-primary">
                  <a href="/admin/products">Back</a>
                </button>

          <!-- Add the form for adding a new product -->
          <div class="card-body">
            <div class="form-container">
              <h4 class="card-title">Add Coupon</h4>
              <form id="couponAddForm" enctype="multipart/form-data">
                <!-- Name Field -->
                <div class="form-group">
                  <label for="productName">Coupon Code</label>
                  <input type="text" id="couponcode" name="" class="form-control" placeholder="Enter Coupon Code"
                    required>
                  <div id="validateCode" class="text-danger"></div>
                </div>
                <!-- Upload Button -->
                


                <!-- Category Field -->
                <div class="form-group">
                  <label for="productCategory">Discount percentage</label>
                  <input type="number" name="" class="form-control" id="discountpercent" placeholder="Enter discount percentage">
                  
                  <div id="validateCategory" class="text-danger"></div>
                </div>
                <!-- Price Field -->
                <div class="form-group">
                  <label for="productPrice">Maximum Purchase Amount</label>
                  <input type="number" id="maxdiscount" name="price" class="form-control"
                    placeholder="Enter  maximum discount amount" required>
                  <div id="validateStock" class="text-danger"></div>
                </div>
                <!-- Quantity Field -->
                <div class="form-group">
                  <label for="productQuantity">Minimum Purchase Amount</label>
                  <input type="number" id="mindiscount" name="quantity" class="form-control"
                    placeholder="Enter minmum discount amount" required>
                  <div id="validatePrice" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <label for="productQuantity">Expiry Date</label>
                    <input type="date" id="expirydate" name="quantity" class="form-control"
                      placeholder="Enter expiry date" required>
                    <div id="validatePrice" class="text-danger"></div>
                  </div>

               
                <!-- Save Button -->
                <div class="col-12 text-center">
                  <button type="submit" class="btn btn-primary">Add Coupon</button>
                  <button class="btn btn-primary">
                    <a href="/admin/coupons" style="color: white;">Back</a>
                  </button>
                </div>
              </form>
              <script>
                document.addEventListener('DOMContentLoaded',async()=>{
                   try{
                    const form=document.getElementById('couponAddForm')
                    console
                    form.addEventListener('submit',async(event)=>{
                      console.log('button clicked')
                        event.preventDefault()
                        const couponCode=document.getElementById('couponcode').value
                        const discountPercentage=parseInt(document.getElementById('discountpercent').value,10)
                        const maxPurchaseAmount=parseInt(document.getElementById('maxdiscount').value,10)
                        const minPurchaseAmount=parseInt(document.getElementById('mindiscount').value,10)
                        const expiryDate=document.getElementById('expirydate').value
                        console.log('max purchase amount:',maxPurchaseAmount)
                        if(discountPercentage<1||discountPercentage>99){
                            alert('percentage should between 1 and 100 and amount never be negetive')
                            return 
                        }else if(maxPurchaseAmount<1||minPurchaseAmount<1||minPurchaseAmount+1000>maxPurchaseAmount){
                          alert('check the minimum and maximum purchase amount carefully!')
                          return 
                        }
                        const formData={
                            couponCode,
                            discountPercentage,
                            maxPurchaseAmount,
                            minPurchaseAmount,
                            expiryDate
                        }
                        console.log(formData)
                        const response=await fetch('/admin/coupons/add',{
                            method:'POST',
                            headers:{
                                'Content-Type':'application/json'
                            },
                            body:JSON.stringify(formData)
                        })
                        const result=await response.json()
                        if(response.ok){
                            Swal.fire({
                              title:'succeess',
                              text :result.message,
                              icon:'success',
                              confirmButtonText:'OK'
                            }).then(()=>{
                              window.location.href='/admin/coupons'
                            })
                        }
                    })
                   }catch(err){
                    console.error(err)
                   }
                    
                })

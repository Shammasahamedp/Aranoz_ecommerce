    <script>
        async function showInput() {
            console.log('button clicked')
            const addInput = document.getElementById('addInput')
            if (addInput.style.display === 'none' || addInput.style.display === '') {
                addInput.style.display = 'block'; // or any other value you want
            } else {
                addInput.style.display = 'none';
            }
        }
        async function addFund() {
            console.log('this is addfund method')
           
            let amount = document.getElementById('addFundInput').value
            amount=Number(amount)
            if(amount<0){
                return alert('amount should be a positive value')
            }
            const response = await fetch('/user/dashboard/profile/wallet/add-balance', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    amount: amount * 100,
                    currency: 'INR'
                })

            })
            const order = await response.json()
            const options = {
                "key": 'rzp_test_t6lNXNWWwp0wq6', // Replace with your Razorpay Test Key ID
                "amount": (order.amount), // Amount is in currency subunits
                "currency": order.currency,
                "name": "Aranoz",
                "description": " Transaction",
                "image": "https://yourlogo.com/logo.png",
                "order_id": order.id, // This is the order ID created in step 2
                "handler": function (response) {
                    fetch('/user/dashboard/profile/wallet/add-balance/verifyrazorpay', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            razorpay_order_id: response.razorpay_order_id,
                            razorpay_payment_id: response.razorpay_payment_id,
                            razorpay_signature: response.razorpay_signature,
                            amount
                        })
                    }).then(response => response.json())
                        .then(data => {
                            if (data.message === 'balance added successfully') {
                                window.location.reload()
                            } else {
                                alert('Payment verification failed');
                            }
                        }).catch(error => {
                            console.error(error);
                        });
                },
                "prefill": {
                    "name": "Test User",
                    "email": "test.user@example.com",
                    "contact": "9999999999"
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    "color": "#ff3368"
                }
            };
            const rzp1 = new Razorpay(options)
            rzp1.open()
        }
    </script>

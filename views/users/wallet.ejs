                const data = await response.json()

                if (response.ok) {
                    window.location.href = '/'
                } else {
                    Swal.fire({
                        title: 'failed',
                        text: data.message,
                        icon: 'failed',
                        confirmButtonText: 'OK'
                    })
                }
            } catch (err) {
                console.log('error in logout')
                Swal.fire({
                    title: 'failed',
                    text: 'error in logout',
                    icon: 'failed',
                    confirmButtonText: 'OK'
                })
            }
        }
    </script>

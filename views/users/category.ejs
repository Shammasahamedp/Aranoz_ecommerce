    <script>
        async function addToWishlist(productId){
           try{
            const response=await fetch('/user/dashboard/add-to-wishlist',{
                method:'POST',
                headers:{
                    'Content-Type':'application/json'
                },
                body:JSON.stringify({productId})
            })
            const result=await response.json()
            if(response.ok){
                console.log('successfully added to wishlist')
                Swal.fire({
                    title:'success',
                    text:result.message,
                    icon:'success',
                    confirmButtonText:'OK'
                })
            }else{
                if(response.status===409){
                    Swal.fire({
                    title:'warning',
                    text:result.message,
                    icon:'warning',
                    confirmButtonText:'OK'
                })
                }
            }
           }catch(err){
            console.error(err)
           }
        }
        const searchCategory = null
        let maxPrice = document.getElementById('maxPrice').value || ''
        console.log(maxPrice)
        let minPrice = document.getElementById('minPrice').value || ''
        let categoryId = document.getElementById('category').value || ''
        let parent = document.getElementById('sort')
        let sortingMethod = parent.querySelector('option').value || ''
        const searchQuery = document.getElementById('productsearch').value || ''
        
        document.addEventListener('DOMContentLoaded', async () => {
         
          
            document.querySelectorAll('.category-item').forEach(item => {
                item.addEventListener('click', function () {
                    const categoryId = this.getAttribute('data-category-id');
                    window.location.href = `/home/shopcategory?page=1&categoryId=${categoryId}&minPrice=${minPrice}&maxPrice=${maxPrice}&searchQuery=${searchQuery}&sort=${sortingMethod}`;
                });
            });

            document.getElementById('buttonPrice').addEventListener('click', async (event) => {
                event.preventDefault()
                maxPrice = document.getElementById('maxPrice').value || ''
                minPrice = document.getElementById('minPrice').value || ''
                window.location.href = `/home/shopcategory?page=1&categoryId=${categoryId}&minPrice=${minPrice}&maxPrice=${maxPrice}&searchQuery=${searchQuery}&sort=${sortingMethod}`
            })
            document.getElementById('sort').addEventListener('change', async (event) => {
                console.log('option clicked')
                // event.preventDefault()
                let sortingMethod = event.target.value
                window.location.href = `/home/shopcategory?page=1&categoryId=${categoryId}&minPrice=${minPrice}&maxPrice=${maxPrice}&searchQuery=${searchQuery}&sort=${sortingMethod}`
            })
            
            function updateInputs(data) {
                from = data.from;
                to = data.to;

                $inputFrom.prop("value", from);
                $inputTo.prop("value", to);
            }


            $(function () {

                var $range = $(".js-range-slider"),
                    $inputFrom = $(".js-input-from"),
                    $inputTo = $(".js-input-to"),
                    instance,
                    min = 0,
                    max = 50000,
                    from = 10,
                    to = 100;

                $range.ionRangeSlider({
                    type: "double",
                    min: min,
                    max: max,
                    from: minPrice,
                    to: maxPrice,
                    prefix: 'tk. ',
                    onStart: updateInputs,
                    onChange: updateInputs,
                    step: 1,
                    prettify_enabled: true,
                    prettify_separator: ".",
                    values_separator: " - ",
                    force_edges: true


                });

                instance = $range.data("ionRangeSlider");

                function updateInputs(data) {
                    from = data.from;
                    to = data.to;

                    $inputFrom.prop("value", from);
                    $inputTo.prop("value", to);
                }

                $inputFrom.on("input", function () {
                    var val = $(this).prop("value");

                    // validate
                    if (val < min) {
                        val = min;
                    } else if (val > to) {
                        val = to;
                    }

                    instance.update({
                        from: val
                    });
                });

                $inputTo.on("input", function () {
                    var val = $(this).prop("value");

                    // validate
                    if (val < from) {
                        val = from;
                    } else if (val > max) {
                        val = max;
                    }

                    instance.update({
                        to: val
                    });
                });

            });


        })
        function sortChange(event) {
            console.log('this is :', event.target.value)
            let sortingMethod = event.target.value
            window.location.href = `/home/shopcategory?page=1&categoryId=<%=categorySlug%>&minPrice=${minPrice}&maxPrice=${maxPrice}&searchQuery=${searchQuery}&sort=${sortingMethod}`
        }
        async function searchTerm() {
            console.log('this is ')
            try {

                const searchQuery = document.getElementById('productsearch').value || ''

                window.location.href = `/home/shopcategory/?page=1&categoryId=<%= categorySlug %>&minPrice=${minPrice}&maxPrice=${maxPrice}&searchQuery=${searchQuery}&sort=${sortingMethod}`


            } catch (err) {
                console.error(err)
            }
        }
        async function logout() {

            try {
                const response = await fetch('/user/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                const data = await response.json()

                if (response.ok) {
                    Swal.fire({
                        title: 'success',
                        text: data.message,
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.href = '/'
                    })
                } else {
                    Swal.fire({
                        title: 'failed',
                        text: data.message,
                        icon: 'failed',
                        confirmButtonText: 'OK'
                    })
                }
            } catch (err) {
                console.log('error in logout')
                Swal.fire({
                    title: 'failed',
                    text: 'error in logout',
                    icon: 'failed',
                    confirmButtonText: 'OK'
                })
            }
        }
        async function addToCart(productId) {

            try {

                const response = await fetch(`/user/dashboard/addtocart/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                }).then(response => response.json()).then(data => {
                    if (data.message === 'Product added to cart') {
                        Swal.fire({
                            title: 'success',
                            text: data.message,
                            icon: 'success',
                            confirmButtonText: 'OK'
                        })
                    } else {
                        Swal.fire({
                            title: 'failed',
                            text: data.message,
                            icon: 'error',
                            confirmButtonText: 'OK'
                        })
                    }
                })

            } catch (err) {
                console.error(err);
            }
        }

    </script>

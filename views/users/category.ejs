    <script>
        // jQuery example to initialize range slider and handle changes
$(document).ready(function() {
    // Initialize the range slider using a library like noUiSlider
    const rangeSlider = $('.js-range-slider');
    const minPriceField = $('.js-input-from');
    const maxPriceField = $('.js-input-to');
    console.log(rangeSlider)
    // Example initialization with noUiSlider
    rangeSlider.noUiSlider({
        start: [0, 40000], // Initial range values (adjust as per your requirements)
        connect: true,
        step: 10,
        range: {
            'min': 0,
            'max': 40000
        }
    });

    // Update min and max price fields based on slider change
    rangeSlider.on('slide', function(values, handle) {
        const minPrice = parseInt(values[0]);
        const maxPrice = parseInt(values[1]);
        minPriceField.val(minPrice);
        maxPriceField.val(maxPrice);
    });

    // Function to handle filtering based on price range
    function applyPriceFilter() {
        const minPrice = minPriceField.val();
        const maxPrice = maxPriceField.val();

        // Construct the new URL with updated parameters
        const currentUrl = window.location.href.split('?')[0]; // Get current URL without query parameters
        const newUrl = `${currentUrl}?minPrice=${minPrice}&maxPrice=${maxPrice}`;

        // Redirect to the new URL
        window.location.href = newUrl;
    }

    // Example: Apply filter when user clicks a filter button or changes the slider
    $('.apply-filter-button').click(function() {
        console.log('clicked')
        applyPriceFilter();
    });

    // Optionally, apply filter when user presses Enter in price input fields
    $('.js-input-from, .js-input-to').keypress(function(event) {
        if (event.which === 13) { // Enter key pressed
            applyPriceFilter();
        }
    });
});

    </script>
    <script>

        document.addEventListener('DOMContentLoaded', async () => {
           
            const cartlinks=document.querySelectorAll('.add_cart')
            cartlinks.forEach(link=>{
            //    const link=document.getElementById('add_cart')
                link.addEventListener('click',async (event)=>{
                    console.log('link clicked')
                    event.preventDefault()
                    const form=link.closest('.single_product_item').querySelector('.add_cart_form')
                    try {
                        const productId=form.querySelector('.product_id').value
                        const response = await fetch(`/user/dashboard/addtocart/${productId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                        });
                        if (response.ok) {
                            const result = await response.json();
                            Swal.fire({
                                title: 'Success',
                                text: result.message,
                                icon: 'success',
                                confirmButtonText: 'OK'
                            });
                        } else {
                            const result = await response.json();
                            Swal.fire({
                                title: 'Failed',
                                text: result.message,
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    } catch (err) {
                        console.error(err);
                    }
                });     
                })
            })
            

